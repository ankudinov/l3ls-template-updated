
{
    "image": "ghcr.io/aristanetworks/avd/universal:python3.11-avd-v4.9.0-dev1",
    "postCreateCommand": "bash -c \"$(curl -sL https://get.containerlab.dev)\"; pip3 install passlib git+https://github.com/ankudinov/cook_and_cut.git; echo 'eval \"$(register-python-argcomplete ccAVD)\"' >> ~/.zshrc",
    "customizations": {
        "vscode": {
            "extensions": [
                // install Marp extension for VScode to build slides
                "marp-team.marp-vscode",
                // git essentials
                "piotrpalarz.vscode-gitignore-generator",
                "mhutchie.git-graph",
                "donjayamanne.githistory",
                // spell checker
                "streetsidesoftware.code-spell-checker",
                // excalidraw, drawio and tldraw
                "hediet.vscode-drawio",
                "tldraw-org.tldraw-vscode",
                // markdown
                "yzhang.markdown-all-in-one",
                "bierner.markdown-checkbox",
                "DavidAnson.vscode-markdownlint",
                // various tools
                "tuxtina.json2yaml",
                "vscode-icons-team.vscode-icons",
                "mutantdino.resourcemonitor"
            ]
        }
    }
}
